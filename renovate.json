{
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:stylelint"
      ],
      "groupName": "stylelint packages"
    },
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint packages"
    }
  ],
  "extends": [
    "config:recommended"
  ]
}
