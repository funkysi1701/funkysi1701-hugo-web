{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:stylelint"
      ],
      "groupName": "stylelint packages"
    },
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint packages"
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile", "docker-compose.yaml"],
      "matchStrings": [
        "exts-(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "nginx-(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "hugomods/hugo",
      "datasourceTemplate": "docker"
    }
  ]
}
