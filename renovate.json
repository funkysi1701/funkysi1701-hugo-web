{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "extends": [
        "packages:stylelint"
      ],
      "groupName": "stylelint packages"
    },
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint packages"
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile", "docker-compose.yml"], // adjust to your file(s)
      "matchStrings": [
        "exts-(?<currentValue>\\d+\\.\\d+\\.\\d+)" // matches exts-0.150.0
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
